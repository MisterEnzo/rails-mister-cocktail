
<div class="container">
  <div class="title">  <h1 class="text-center">Pokemon Cocktails</h1></div>
  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-inverse text-center" %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image:
                 url('<%= cl_image_path 'pokeball.png', height: 300, width: 300, crop: :scale%>')">
          <div class="card-category"></div>
          <div class="card-description">
            <h3 class="text-center"><%= link_to cocktail.name, cocktail_path(cocktail.id) %> </h3>
          </div>
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>


