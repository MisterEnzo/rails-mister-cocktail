<div class="container">
  <h1 class="text-center">SHOW</h1>
   <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= @cocktail.name %>
      <% @cocktail.doses.each do |dose| %>
      <p><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "destroy dose", dose_path(dose), method: :delete %></p>
      <% end %>
      <hr>
      <%= link_to "Add a Dose of Ingredient", new_cocktail_dose_path(@cocktail)  %>
      <p></p>
      <%= link_to "All Cocktails", cocktails_path %>
    </div>
  </div>
</div>


