<div class="container">
  <h1 class="text-center">New Cocktail</h1>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@cocktail) do |f| %>
        <% if @cocktail.errors.any? %>
          <div id="error_explanation">
            <ul>
            <% @cocktail.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      <%= f.input :name %>
      <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>
